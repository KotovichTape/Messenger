<Window x:Class="Messenger.MainWindow"      
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="ВХОД" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="24px" FontFamily="Cascadia Mono"/>
        <TextBox x:Name="Username" Grid.Row="1" Margin="20, 30, 20, 20" TextAlignment="Center" Text="Введите ник"/>
        <Button x:Name="CreateNew" Grid.Row="2" Content="Создать новый чат" Margin="50, 20, 50, 20" Click="CreateNew_Click"/>
        <Button x:Name="Connect" Grid.Row="3" Content="Подключиться к уже существующему" Margin="50, 20, 50, 20" Click="Connect_Click"/>
        <TextBox x:Name="Ip_adress" Grid.Row="4" Margin="20, 30, 20, 20" TextAlignment="Center" Text="Введите IP адрес"/>


    </Grid>
</Window>
